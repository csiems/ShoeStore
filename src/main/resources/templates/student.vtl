<h1>$student.getName()</h1>
<h3>Enrollment Date: $student.getEnrollmentDate()</h3>

#if(!($student.getCourses().size == 0))
  <p>Here are the courses for this student:</p>
  <table class="table table-hover sortable" id="courseTable">
    <tbody>
      #foreach ($course in $student.getCourses())
        <tr>
          <td>$course.getName()</td>
        </tr>
      #end
    </tbody>
  </table>
  <hr>
#end

<form action='/add_courses' method='post'>
    <input id="student_id" name="student_id" type="hidden" value="$student.getId()">
    <label for="course_id">Select a course:</label>
    <select id='course_id' name='course_id' type='text'>
      #foreach($course in $courses)
        <option value="$course.getId()">$course.getName()</option>
      #end
    </select>
    <button type='submit' class='btn btn-default'>Add course</button>
</form>
<hr>

<form action="/update_student_name" method="post">
    <input id="student_id" name="student_id" type="hidden" value="$student.getId()">
    <label for="name">Update this Student's Name:</label>
    <input id="name" name="name" type="text">
  <button type="submit" id="name-update" class="btn btn-default">Submit</button>
</form>
<hr>

<form action="/update_student_enrollment_date" method="post">
    <input id="student_id" name="student_id" type="hidden" value="$student.getId()">
    <label for="enrollment-date">Update this Student's Enrollment Date:</label>
    <input id="enrollment-date" name="enrollment-date" type="date">
  <button type="submit" id="date-update" class="btn btn-default">Submit</button>
</form>
<hr>

<form action='/delete_student' method='post'>
    <input id="student_id" name="student_id" type="hidden" value="$student.getId()">
    <label for="delete_student">Remove this student:</label>
    <button type='submit' id="delete_student" class="btn btn-danger">DELETE </button>
</form>
